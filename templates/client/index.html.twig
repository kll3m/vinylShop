{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomClient</th>
                <th>PrenomClient</th>
                <th>TelClient</th>
                <th>MailClient</th>
                <th>AdresseClient</th>
                <th>PseudoClient</th>
                <th>MdpClient</th>
                <th>RoleClient</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nomClient }}</td>
                <td>{{ client.prenomClient }}</td>
                <td>{{ client.telClient }}</td>
                <td>{{ client.mailClient }}</td>
                <td>{{ client.adresseClient }}</td>
                <td>{{ client.pseudoClient }}</td>
                <td>{{ client.mdpClient }}</td>
                <td>{{ client.roleClient ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
