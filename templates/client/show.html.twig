    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ client.nomClient }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenomClient }}</td>
            </tr>
