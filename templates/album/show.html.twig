{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href='../'>Accueil</a></li>
                        <li class="breadcrumb-item"><a href='/'>Albums</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ album.nomAlbum }}</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-4">
                <img style="width:350px;" src="{{ asset( album.imgAlbum ) }}">
            </div>
            <div class="col-4">
                <h4>{{ album.nomAlbum }}</h4>
                <p>{{ album.nomAlbum }}</p>
                <p>Label</p>
                <p>{{ album.anneeAlbum }}</p>
                <p>{{ album.artiste.nomArtiste }}</p>
            </div>
            <div class="col-4">
                <div class="jumbotron jumbotron-fluid">

                    <h1 class="display-4"></h1>
                    <p class="lead">{{ album.prixAlbum }} €</p>
                    <button type="button" class="btn btn-outline-dark">Ajouter au panier</button>
                    <p class="lead">Quantité</p>

                </div>
            </div>
        </div>


    <a href="{{ path('album_index') }}">Retour à la liste des albums</a>

    <a href="{{ path('album_edit', {'id': album.id}) }}">Modifier l'album</a>

    {{ include('album/_delete_form.html.twig') }}
    </div>
{% endblock %}
