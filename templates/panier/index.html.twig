{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Album</th>
                <th>Artiste</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.album.nomAlbum  }}</td>
                        <td>{{ item.album.artiste.nomArtiste }}</td>
                        <td>{{ item.album.prixAlbum }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.album.prixAlbum * item.quantity }}</td>
                        <td>
                            <a href="{{ path('panier_remove', {'id': item.album.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="4" class="text-right">Total :</td>
                <td>{{ total }}</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide !</p>
    {% endif %}

{% endblock %}
