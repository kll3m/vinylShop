{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">

            <div class="bg p-3" style="margin-top: 80px;">
                <h1>Votre panier</h1>
            </div>

            {% if items | length > 0 %}
                <table class="table">
                    <thead>
                    <tr>
                        <th>Album</th>
                        <th>Artiste</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.album.nomAlbum  }}</td>
                                <td>{{ item.album.artiste.nomArtiste }}</td>
                                <td>{{ item.album.prixAlbum }}</td>
                                <td>{{ item.quantity }}</td>
                                <td>{{ item.album.prixAlbum * item.quantity }}</td>
                                <td>
                                    <a href="{{ path('panier_remove', {'id': item.album.id}) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="4" class="text-right">Total :</td>
                        <td>{{ total }}
                        <td><button class="btn btn-primary">Commander</button></td>
                    </tr>
                    </tfoot>

                </table>


            {% else %}
                <p>Votre panier est vide !</p>
            {% endif %}
        </div>
    </div>

    <!-- FOOTER -->
    <div style="height:600px;"></div>
    <footer id="footer" class="page-footer bg-dark footer-1">
        <div class="main-footer widgets-dark typo-light">
            <div class="container">
                <div class="row">

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="widget subscribe no-box">
                            <h5 class="widget-title">Vinyl Shop<span></span></h5>
                            <p>Passionés par les disques et la musique depuis plus de 50 ans</p>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="widget no-box">
                            <h5 class="widget-title">Liens rapides<span></span></h5>
                            <ul class="thumbnail-widget">
                                <li>
                                    <div class="thumb-content"><a href="/album/nouveau">Nouveautés</a></div>
                                </li>
                                <li>
                                    <div class="thumb-content"><a href="/style">Styles</a></div>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div class="widget no-box">
                            <h5 class="widget-title">Contactez nous<span></span></h5>
                            <i class="fa fa-facebook-f white"> </i>
                            <i class="fa fa-twitter"> </i>
                            <i class="fa fa-instagram"> </i>
                            <p><a href="mailto:info@vinylshop.com" title="glorythemes">info@vinylshop.com</a></p>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">

                        <div class="widget no-box">
                            <h5 class="widget-title">Notre situation<span></span></h5>
                            <p>11, Rue de la Roquette </hr> Paris 11ème</p>

                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p>Copyright VinylShop © 2016. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

{% endblock %}
